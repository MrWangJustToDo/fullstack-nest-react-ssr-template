{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "baseUrl": "./",
    "types": ["node", "jest", "webpack-env"],
    "paths": {
      "@server": ["server"],
      "@server/*": ["server/*"],
      "@client": ["client"],
      "@client/*": ["client/*"],
      "@shared": ["shared"],
      "@shared/*": ["shared/*"]
    }
  },
  "exclude": ["dist", "dev", "node_modules"],
  "include": ["**/*.ts", "**/*.tsx"]
}
